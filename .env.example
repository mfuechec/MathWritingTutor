# Math Validation API Configuration
# Copy this file to .env and add your actual credentials

# CameraMath API (Primary)
CAMERAMATH_API_KEY=your_cameramath_api_key_here
CAMERAMATH_API_URL=https://api.cameramath.com/v1

# Wolfram Alpha API (Backup)
WOLFRAM_API_KEY=your_wolfram_api_key_here
WOLFRAM_API_URL=https://api.wolframalpha.com/v2

# Firebase Configuration (for Cloud Functions - Sprint 5-6)
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_API_KEY=your_firebase_api_key

# Development Settings
NODE_ENV=development
API_TIMEOUT=5000
ENABLE_MOCK_API=false
